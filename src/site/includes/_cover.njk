{% extends "partials/_wrapper.njk" %}
{% block main %}

<body id="{{ title | slug }}" class="cover dest">
  {% include './partials/_header.njk' %}
  <main class="marq" style="background-image: url(/img/rapid-response-websites.webp);">
  <header class="marq__hed">
    <h1 class="marq__hed--sub">{{ title | mdRender | safe }}</h1>
    <h2 class="marq--sub">{{ subHed }}</h2>
    <div class="marq--dek">{{ content | safe }}</div>
    {# <figure class="marq__grfx">
      <img class="marq__grfx--img" src="/img/DSC_0112.jpg" alt="Our hero, out of focus.">
    </figure> #}
  </header>

    {% set suppId = page.fileName %}
    {{ suppId }}


  </main>
  {% for supp in supp %}
  <div class="supp">
    <figure class="supp__grfx">
      <img class="supp__grfx--img" src="{{ supp.grfx }}">
    </figure>
    <aside  class="supp__post">
      <h2 class="supp__post--hed">{{ supp.title }}</h2>
      <div class="supp__post--body">
        <p>{{ supp.dek | mdRender | safe }}</p>
      </div>
    </aside>
  </div>
  {% endfor %}

  {% if kickers.kickers.page === page.fileName %}
    {% include './partials/_kickers.njk' %}
  {% endif %}

  {% include './partials/_features.njk' %}

  {% include './partials/_form.njk' %}

  <footer class="cov__foot foot">
    <h2 class="foot__credit">&copy; {{ site.buildTime | copyDate }} Jeff Rummel</h2>
    <nav class="foot__nav"><a class="foot__nav--link" href="//github.com/jeffrummel">{% include 'icons/github.svg' %} <span class="foot__nav--text">GitHub</span></a><a class="foot__nav--link" href="//twitter.com/jeffrummel">{% include 'icons/twitter.svg' %}<span class="foot__nav--text">Twitter</span></a></nav>
  </footer>
  <script src="/js/main.js" async></script>
</body>
{% endblock %}
